<resources>

    <!-- Base application theme. -->
    <style name="ClockBlueAndPink" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/primaryTextColor</item>
    </style>

    <style name="NotificationButton" parent="@android:style/TextAppearance.StatusBar.EventContent">
        <item name="android:textSize">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="NotificationButtonFirst" parent="NotificationButton">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="Theme.MyTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>


    <style name="durationSpinnerStyle" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textSize">40dp</item>
    </style>

    <style name="modeSpinnerStyle" parent="@android:style/Widget.Spinner">
        <item name="android:textSize">30dp</item>
    </style>

</resources>
